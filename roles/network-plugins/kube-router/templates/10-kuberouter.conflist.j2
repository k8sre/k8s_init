{
   "cniVersion":"0.3.0",
   "name":"kubernetes",
   "plugins":[
      {
         "name":"kubernetes",
         "type":"bridge",
         "bridge":"kube-bridge",
         "isDefaultGateway":true,
{% if kuberouter.hairpin_mode %}
          "hairpinMode":true,
{% endif %}
         "ipam":{
            "type":"host-local",
            "subnet": "{{ node_pod_cidr }}",
            "gateway": "{{ node_pod_cidr|ipaddr('net')|ipaddr(1)|ipaddr('address') }}",
            "routes": [{
			    "dst": "0.0.0.0/0"
		    }]
         }
      },
      {
         "type":"portmap",
         "capabilities":{
            "portMappings":true
         }
      }
   ]
}